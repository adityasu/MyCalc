<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewdemo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:textSize="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:enabled="false"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        android:enabled="false"
         />
    <Button
        android:id="@+id/btn_add"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:text="+"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn_add"
        android:text="-"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btn_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btn_sub"
        android:layout_marginStart="20dp"
        android:text="/"
        android:layout_marginTop="21dp" />
    <Button
        android:id="@+id/btn_1"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_add"
        android:text="1"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_add"
        android:layout_toRightOf="@+id/btn_1"
        android:layout_marginStart="20dp"
        android:text="2"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_add"
        android:layout_toRightOf="@+id/btn_2"
        android:layout_marginStart="20dp"
        android:text="3"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btn_4"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_1"
        android:text="4"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_1"
        android:layout_toRightOf="@+id/btn_4"
        android:layout_marginStart="20dp"
        android:text="5"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_1"
        android:layout_toRightOf="@+id/btn_5"
        android:layout_marginStart="20dp"
        android:text="6"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btn_7"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_4"
        android:text="7"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_4"
        android:layout_toRightOf="@+id/btn_7"
        android:layout_marginStart="20dp"
        android:text="8"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_4"
        android:layout_toRightOf="@+id/btn_8"
        android:layout_marginStart="20dp"
        android:text="9"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btn_mul"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_7"
        android:text="*"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_7"
        android:layout_toRightOf="@+id/btn_mul"
        android:layout_marginStart="20dp"
        android:text="0"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btn_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_7"
        android:layout_toRightOf="@+id/btn_0"
        android:layout_marginStart="20dp"
        android:text="= ANS"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ans"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="Clear"
        android:layout_marginTop="21dp" />



</RelativeLayout>
</layout>